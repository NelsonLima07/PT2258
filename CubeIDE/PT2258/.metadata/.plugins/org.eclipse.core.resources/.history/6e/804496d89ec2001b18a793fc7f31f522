#include "stdlib.h"

#include "usr/J3_PT2258.h"

#define VOL_MAX 79
#define VOL_MIN 0

struct TPT2258{
  I2C_HandleTypeDef* i2c;
  uint8_t address;
};

typedef struct TPT2258 TPT2258;



void J3_PT2258_setVolumeCanal(TPT2258* _pt2258, uint8_t _canal, uint8_t _vol){
	uint8_t bu, bd;
	uint8_t aux;

	if (_canal > 6){
		return;
	}

	if (_vol > VOL_MAX)
		_vol = VOL_MAX;

	aux = VOL_MAX - _vol;

	bu = (CANAL_U  | (_vol % 10));
	bd = (CANAL_D  | (_vol / 10));
}
